<section class="events-list">
    <div class="container">
        <div class="row">

            <h1>Eventos</h1>
            <p>Nuestros colaboradores llevan a cabo eventos para bla bla</p>

            <ul class="list-group">



                <div class="row justify-content-center">

                {{#each allEvents}}
                    <div class="col-6">
                        <div class="card mb-3">
                            <img src="{{eventImg}}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{type}}</p>
                                <p class="card-text"><small class="text-muted">{{date}}</small></p>
                                <div class="event-buttons">
                                    <a class="btn-dark" href="/eventos/{{id}}">Ver m√°s</a>
                                    <form id="join-form" action="/eventos/{{id}}/unirse" method="POST">
                                        <button id="btn-join" class="btn btn-dark">Unirme al evento</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
                </div>


            </ul>

        </div>
    </div>
</section>

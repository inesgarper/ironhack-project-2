<div class="container">

    <div class="row">

        <div class="col-4">
            <p>Panel de:
            <h4>{{user.username}}</h4>
            </p>

            {{#if isAdmin}}
            <h1>Soy la jefa jejejeje</h1>

            <ul>
                {{#each allUsers}}
                <li> <strong>Usuario: </strong>{{username}}<strong>ID:</strong>{{id}}</li>
                <form action="/usuario/{{id}}/eliminar" method="POST"> <button class="btn-sm btn-danger">
                        eliminar</button> </form>
                {{/each}}
            </ul>

            {{/if}}

            <h2> MIS CASOS </h2>

            <ul class="userCases list-group">

                {{#each allUserCases}}
                <li class="group-items">{{description}} <a href="/usuario/{{creator._id}}/{{_id}}"
                        class="btn btn-sm btn-dark">Detalle</a>
                </li>
                {{/each}}

            </ul>

            <button id="edit-user-btn" class="btn btn-sm btn-dark" style="background-color: #7859d3">Editar
                Perfil</button>
        </div>

        <form id="edit-form" class="editUser-off" action="/usuario/{{user._id}}/editar" method="POST">
            <div class="mb-3">
                <label for="emailInput" class="form-label">Dirección de email</label>
                <input type="email" class="form-control" id="emailInput" name="email">
            </div>

            <div class="mb-3">
                <label for="usernameInput" class="form-label">Nombre de usuario</label>
                <input type="text" class="form-control" id="usernameInput" name="username">
            </div>

            <div class="mb-3">
                <label for="idInput" class="form-label"></label>
                <input type="hidden" class="form-control" id="idInput" name="id" value="{{user._id}}">
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark block">Actualizar datos</button>
            </div>

        </form>

        <h3>EVENTOS A LOS QUE ASISTIRÉ</h3>

        <div class="container">

            <ul class="list-group">

                {{#each user.events}}
                <li class="list-group-item eventList"> <strong>{{title}}</strong>

                    <article>
                        <p>{{description}}</p>
                        <div>
                            <a class="btn btn-success" href="{{location.URL}}">Cómo Llegar</a>
                            <form action="/eventos/{{id}}/desunirse" method="POST">
                                <button class="btn btn-warning">Cancelar asistencia</button>
                            </form>
                        </div>
                    </article>



                </li>
                {{/each}}
            </ul>
        </div>



        {{#if isEditor}}

        <h2>LISTA DE EVENTOS</h2>

        <div class="container">

            <ul class="list-group">
                {{#each allEvents}}
                <li class="list-group-item">
                    <h5>{{title}}</h5>

                    <form action="/eventos/{{id}}/eliminar" method="POST">
                        <button class="btn btn-danger">Eliminar evento</button>
                    </form>
                    <a href="/eventos/{{id}}/editar" class="btn btn-info">Editar este EVENTO</a>
                </li>
                {{/each}}
            </ul>
        </div>


        <a href="/eventos/crear" id="edit-user-btn" class="btn btn-sm btn-dark" style="background-color: #7859d3">Crear
            Evento</a>

        {{/if}}





    </div>

    <script src="/js/DOM/editProfile.js"></script>
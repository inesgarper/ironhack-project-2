<h1>SOY EL FORMULARIO PARA EDITAR EL CASO</h1>

<figure id="editMap"></figure>

<p>Soy el id del caso {{caso._id}}</p>
<p>Soy el id del creador {{id}}</p>

<form action="/usuario/{{id}}/{{caso._id}}/editar" method="POST">
    <div class="mb-3">
        <label for="descriptionInput" class="form-label">Descripci√≥n</label>
        <textarea type="text" class="form-control" id="descriptionInput" rows="3"
            name="description">{{caso.description}}</textarea>
    </div>

    <div class="mb-3">
        {{!-- <label for="latInput" class="form-label">Latitud</label> --}}
        <input type="hidden" class="form-control" id="latInput" name="lat" value="{{caso.location.coordinates.[0]}}">
    </div>

    <div class="mb-3">
        {{!-- <label for="lngInput" class="form-label">Longitud</label> --}}
        <input type="hidden" class="form-control" id="lngInput" name="lng" value="{{caso.location.coordinates.[1]}}">
    </div>

    <div class="mb-3">
        {{!-- <label for="lngInput" class="form-label">Creador</label> --}}
        <input type="text" class="form-control" id="creatorId" name="creator" value="{{caso.creator}}">
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-dark block">Editar caso</button>
    </div>

</form>


